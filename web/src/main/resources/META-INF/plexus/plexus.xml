<plexus>
	<components>
		<component>
			<role>org.codehaus.plexus.logging.LoggerManager</role>
			<implementation>org.unidal.lookup.logger.TimedConsoleLoggerManager</implementation>
			<configuration>
				<dateFormat>MM-dd HH:mm:ss.SSS</dateFormat>
				<showClass>true</showClass>
				<logFilePattern>logs/pet-{0,date,yyyyMMdd}.log</logFilePattern>
				<baseDirRef>PET_HOME</baseDirRef>
			</configuration>
		</component>
	</components>
</plexus>