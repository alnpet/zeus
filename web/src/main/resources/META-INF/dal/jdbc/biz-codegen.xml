        <statement><![CDATA[UPDATE <TABLE/>
        SET <FIELDS/>
        WHERE <FIELD name='id'/> = ${key-id}]]></statement>
      </query>
      <query name="delete-by-PK" type="DELETE">
        <param name="key-id" />
        <statement><![CDATA[DELETE FROM <TABLE/>
        WHERE <FIELD name='id'/> = ${key-id}]]></statement>
      </query>
    </query-defs>
  </entity>
</entities>

