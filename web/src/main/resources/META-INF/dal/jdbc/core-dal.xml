<?xml version="1.0" encoding="UTF-8"?>
<entities do-package="com.alnpet.dal.core" gen="true">
  <entity name="pet" table="pet" alias="p" do-class="PetDo">
    <member name="creation-date" field="creation_date" value-type="Date" nullable="false" insert-expr="NOW()"/>
    <member name="last-modified-date" field="last_modified_date" value-type="Date" nullable="false" insert-expr="NOW()" update-expr="NOW()"/>
    <query-defs>
      <query name="insert" type="INSERT">
        <statement><![CDATA[
        INSERT INTO <TABLE/>(<FIELDS/>)
        VALUES(<VALUES/>)
        ON DUPLICATE KEY UPDATE 
        	<FIELD name="token"/> = ${token},  
        	<FIELD name="last-modified-date"/> = NOW() 
        ]]></statement>
      </query>
      <query name="find-by-token" type="SELECT">
        <param name="token" />
        <statement><![CDATA[
        SELECT <FIELDS/>
        FROM <TABLE/>
        WHERE <FIELD name='token'/> = ${token}
        ]]></statement>
      </query>
    </query-defs>
  </entity>
  <entity name="activity-in-hour" table="activity_in_hour" alias="aih">
    <member name="creation-date" field="creation_date" value-type="Date" nullable="false" insert-expr="NOW()"/>
    <member name="last-modified-date" field="last_modified_date" value-type="Date" nullable="false" insert-expr="NOW()" update-expr="NOW()"/>
    <var name="start-date" value-type="Date"/>
    <var name="end-date" value-type="Date"/>
    <query-defs>
      <query name="find-all-by-pet-and-date-range" type="SELECT" multiple="true">
        <param name="pet-id" />
        <param name="start-date" />
        <param name="end-date" />
        <statement><![CDATA[
        SELECT <FIELDS/>
        FROM <TABLE/>
        WHERE <FIELD name='pet-id'/> >= ${pet-id}
        	AND <FIELD name='day'/> >= ${start-date}
        	AND <FIELD name='day'/> <= ${end-date}
        ]]></statement>
      </query>
    </query-defs>
  </entity>
  <entity name="activity-in-day" table="activity_in_day" alias="aid">
    <member name="creation-date" field="creation_date" value-type="Date" nullable="false" insert-expr="NOW()"/>
    <member name="last-modified-date" field="last_modified_date" value-type="Date" nullable="false" insert-expr="NOW()" update-expr="NOW()"/>
    <var name="start-date" value-type="Date"/>
    <var name="end-date" value-type="Date"/>
    <query-defs>
      <query name="find-all-by-pet-and-date-range" type="SELECT" multiple="true">
        <param name="pet-id" />
        <param name="start-date" />
        <param name="end-date" />
        <statement><![CDATA[
        SELECT <FIELDS/>
        FROM <TABLE/>
        WHERE <FIELD name='pet-id'/> >= ${pet-id}
        	AND <FIELD name='day'/> >= ${start-date}
        	AND <FIELD name='day'/> <= ${end-date}
        ]]></statement>
      </query>
    </query-defs>
  </entity>
</entities>
