<toc>
	<releases>
		<release version="1.0" date="2014-09-28">Initial version</release>
		<release version="1.1" date="2014-09-30">Second version</release>
	</releases>
	<changes>
		<change bug-id="MNG-0001" date="2014-09-27">Pet registration and pet owner's contact information collection</change>
		<change bug-id="MNG-0002" date="2014-09-28">Pet activities in hourly, daily and weekly</change>
	</changes>
	<apis>
		<api name="register pet">
			<description>Register a pet</description>
			<syntax><![CDATA[http://api.alnpet.com/api/pet?op=register&name=[name]&category=[category]&device=[device]]]></syntax>
			<options>
				<option name="name" type="String">Pet name</option>
				<option name="category" type="String">Category the pet belongs to</option>
				<option name="device" type="String">Mobile device ID, which is unique</option>
			</options>
			<samples>
				<sample>
					<request><![CDATA[
http://api.alnpet.com/api/pet?op=register&name=name&category=category&device=d101
					]]></request>
					<response><![CDATA[
<model>
<code>200</code>
<pet id="b47f5b61-0617-4d3b-b79f-857442b45ab1"/>
</model>
					]]></response>
				</sample>
				<sample />
			</samples>
		</api>
		<api name="update user">
			<description>Update pet owner information</description>
			<syntax><![CDATA[http://api.alnpet.com/api/pet?op=update&token=[token]&nickname=[nickname]&email=[email]&phone=[phone]]]></syntax>
			<options>
				<option name="token" type="String">Access token. Pet ID</option>
				<option name="nickname" type="String">User nick name</option>
				<option name="email" type="String">User email address</option>
				<option name="phone" type="String" optional="true">Use contact phone</option>
			</options>
			<samples>
				<sample>
					<request><![CDATA[
http://api.alnpet.com/api/pet?op=update&token=b47f5b61-0617-4d3b-b79f-857442b45ab1&nickname=nickname&email=abc@example.com
					]]></request>
					<response><![CDATA[
<model>
<code>200</code>
<pet id="b47f5b61-0617-4d3b-b79f-857442b45ab1"/>
</model>
					]]></response>
				</sample>
			</samples>
		</api>
		<api name="get activity data">
			<description>Get pet's activities</description>
			<syntax><![CDATA[http://api.alnpet.com/api/activity/[type]/[date]?token=[token]]]></syntax>
			<options>
				<option name="type" type="String" optional="true">Type. Optional values: 'day', 'week', 'month'. Default value: 'day'</option>
				<option name="date" type="String" optional="true">Date. Format 'yyyyMMdd' for type('day', 'week' and 'month'), 'yyyyMM' for type('month'). Default for today</option>
				<option name="token" type="String">Access token. Pet ID</option>
			</options>
			<samples>
				<sample>
					<request><![CDATA[
http://api.alnpet.com/api/activity/day?token=b47f5b61-0617-4d3b-b79f-857442b45ab1
					]]></request>
					<response><![CDATA[
<model>
<code>200</code>
<pet id="b47f5b61-0617-4d3b-b79f-857442b45ab1"/>
<activities start-date="2014-09-28 00:00:00" end-date="2014-09-28 23:59:59">
   <activity food="90" play="60" active="60" rest="20" hour="0"/>
   <activity food="96" play="60" active="0" rest="20" hour="1"/>
   <activity food="49" play="40" active="60" rest="60" hour="2"/>
   <activity food="42" play="0" active="40" rest="60" hour="3"/>
   <activity food="95" play="40" active="40" rest="20" hour="4"/>
   <activity food="89" play="0" active="20" rest="0" hour="5"/>
   <activity food="44" play="0" active="0" rest="40" hour="6"/>
   <activity food="21" play="40" active="60" rest="20" hour="7"/>
   <activity food="21" play="40" active="0" rest="60" hour="8"/>
   <activity food="56" play="60" active="40" rest="60" hour="9"/>
</activities>
</model>
					]]></response>
				</sample>
			</samples>
		</api>
		<api name="put activity data">
			<description>Put pet's activities</description>
			<syntax><![CDATA[http://api.alnpet.com/api/activity?op=update&token=[token]&hour=[hour]&food=[food]&play=[play]&active=[active]8&rest=[rest]]]></syntax>
			<options>
				<option name="token" type="String">Access token. Pet ID</option>
				<option name="hour" type="int">Hour of day. Optional values: 0-23</option>
				<option name="food" type="int" optional="true">Food in gram.</option>
				<option name="play" type="int" optional="true">Play in calorie.</option>
				<option name="active" type="int" optional="true">Active in calorie</option>
				<option name="rest" type="int" optional="true">Rest in calorie</option>
			</options>
			<samples>
				<sample>
					<request><![CDATA[
http://api.alnpet.com/api/activity?op=update&token=b47f5b61-0617-4d3b-b79f-857442b45ab1&hour=10&food=12&play=3&active=18&rest=40
					]]></request>
					<response><![CDATA[
<model>
<code>200</code>
<pet id="b47f5b61-0617-4d3b-b79f-857442b45ab1"/>
</model>
					]]></response>
				</sample>
			</samples>
		</api>
	</apis>
</toc>